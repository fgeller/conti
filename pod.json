{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "contd",
    "namespace": "minikube",
    "labels": { "name": "contd" }
  },
  "spec": {
    "containers": [
      {
        "name": "contd",
        "image": "contd:v1.0.8",
        "livenessProbe": { "httpGet": { "path": "/tasks", "port": 7272 } },
        "ports": [
          { "name": "web", "protocol": "TCP", "containerPort": 7272 }
        ]
      }
    ]
  }
}
